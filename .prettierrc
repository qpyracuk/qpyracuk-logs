{
	"singleQuote": true,
	"endOfLine": "lf",
	"useTabs": true,
	"printWidth": 120,
	"tabWidth": 2,
	"semi": true,
	"trailingComma": "all",
	"bracketSpacing": true,
	"arrowParens": "always",
	"proseWrap": "always",
	"quoteProps": "as-needed",
	"jsxSingleQuote": true,
	"htmlWhitespaceSensitivity": "css",
	"overrides": [
		{
			"files": "*.md",
			"options": {
				"parser": "markdown",
				"proseWrap": "always"
			}
		},
		{
			"files": "*.json",
			"options": {
				"parser": "json",
				"tabWidth": 2
			}
		},
		{
			"files": "*.ts",
			"options": {
				"parser": "typescript"
			}
		},
		{
			"files": "*.js",
			"options": {
				"parser": "babel"
			}
		}
	]
}
